<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="apps.ssw555.com.itemcheck.ItemsActivity"
    android:background="#ffffbc6d">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout2"
        android:background="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/item_edit_Text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/add_new_item_hint"
            android:background="#63ffffff"
            android:layout_toLeftOf="@+id/add_item_button"
            android:layout_toStartOf="@+id/add_item_button"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/add_item_button"
            android:layout_alignTop="@+id/add_item_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/add"
            android:id="@+id/add_item_button"
            android:onClick="onAddButtonClick"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_view"
        android:background="#ffffffff"
        android:layout_marginTop="37dp"
        android:dividerHeight="1dp"
        android:divider="#ff567cf7"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
